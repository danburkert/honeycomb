<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd"
    name="${project.artifactId}">
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>
    <custom>
        <fluidoSkin>
            <topBarEnabled>false</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <gitHub>
                <projectId>nearinfinity/honeycomb</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>orange</ribbonColor>
            </gitHub>            
        </fluidoSkin>
    </custom>

    <publishDate/>
    <version position="right"/>

    <poweredBy>
        <logo name="Near Infinity" href="https://www.nearinfinity.com/"
            img="https://www.nearinfinity.com/assets/images/logo.png" />
    </poweredBy>

    <body>
        <links>
            <item name="GitHub Repo" href="https://github.com/nearinfinity/honeycomb" />
        </links>
        <menu ref="modules" />
        <menu ref="reports" />
    </body>
</project>
